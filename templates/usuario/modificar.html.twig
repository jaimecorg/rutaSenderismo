{% extends 'base.html.twig' %}

{% block body %}

    {% if usuario.id %}
        <h1>Modificar usuario</h1>
    {% else %}
        <h1>Registrar usuario</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <a href="{{ path('usuario_listar') }}" class="btn btn-info"><i class="bi bi-box-arrow-up-left"></i> Volver al listado</a>
    <button type="submit" class="btn btn-success">Guardar cambios</button>

    {% if usuario.id %}
        <a href="{{ path('usuario_eliminar', {'id': usuario.id}) }}" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar usuario</a>
    {% endif %}

    {{ form_end(form) }}

{% endblock %}

