{% extends 'base.html.twig' %}

{% block body %}
    <h3>Listado de rutas </h3>
    <a href="{{ path('ruta_nueva') }}">Nueva ruta</a>
    <table border="1px solid">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Duración</th>
                <th>Desnivel</th>
                <th>Descripción</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for ruta in rutas %}
            <tr>
                <td>{{ ruta.id }}</td>
                <td>{{ ruta.nombre }}</td>
                <td>{{ ruta.direccion }}</td>
                <td>{{ ruta.duracion ? ruta.duracion | date('d/m/Y') }}</td>
                <td>{{ ruta.desnivel  }}</td>
                <td>{{ ruta.descripcion  }}</td>

                <td><a href="{{ path('ruta_modificar', {'id': ruta.id}) }}">Modificar</a></td>
                <td><a href="{{ path('ruta_eliminar', {'id': ruta.id}) }}">Eliminar</a></td>
            </tr>
        {% else %}
            <tr>
                <th colspan="5">No hay rutas</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}