{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}

    {% if ruta.id %}
        <h1>Modificar ruta</h1>
    {% else %}
        <h1>Registrar ruta</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <a href="{{ path('ruta_listar') }}" class="btn btn-info"><i class="bi bi-box-arrow-up-left"></i> Volver al listado</a>
    <button type="submit" class="btn btn-success">Guardar cambios</button>

    {% if ruta.id %}
        <a href="{{ path('ruta_eliminar', {'id': ruta.id}) }}" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar ruta</a>
    {% endif %}

    {{ form_end(form) }}

{% endblock %}

