{% extends 'base.html.twig' %}

{% block body %}
    <div class="body">

    {% block content %}
        <div class="login-container">
            <form method="post" class="login-form">
                {% if error %}
                    <div class="alert alert-danger">{{ error.message }}</div>
                {% endif %}
                <div class="form-group">
                    <label for="usuario">Usuario:</label>
                    <input type="text" value="{{ ultimo_usuario }}" name="_username" placeholder="Usuario" required autofocus id="usuario" class="form-control">
                </div>
                <div class="form-group">
                    <label for="clave">Clave:</label>
                    <input type="password" name="_password" required id="clave" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Acceder</button>
                </div>
            </form>

            <a href="{{ path('usuario_crear_perfil') }}">Registrarse</a>

        </div>
    {% endblock %}
    </div>

{% endblock %}
