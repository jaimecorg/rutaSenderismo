{% extends 'base.html.twig' %}

{% block body %}
    {% block title %}Â¡Entrar!{% endblock %}

    {% block content %}
        <form method="post" class="form">
            {% if error %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endif %}
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="usuario">Usuario: </label>
                <div class="col-sm-10">
                    <input type="text" value="{{ ultimo_usuario }}" name="_username" placeholder="Usuario" required autofocus id="usuario">
                </div>
                <label class="col-form-label col-sm-2" for="clave">Clave: </label>
                <div class="col-sm-10">
                    <input type="password" name="_password" required id="clave">
                </div>
                <div class="col-sm-10">
                    <button class="btn btn-lg btn-primary" type="submit">Acceder</button>
                </div>
            </div>
        </form>
    {% endblock %}
{% endblock %}